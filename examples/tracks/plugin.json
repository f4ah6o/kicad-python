{
    "identifier": "com.gitlab.craftyjon.kipy.tracks",
    "name": "Track Tools",
    "description": "Track Manipulating Actions",
    "runtime": {
        "type": "python",
        "min_version": "3.10"
    },
    "actions": [
        {
            "identifier": "add-random-tracks",
            "name": "Add Random Tracks",
            "description": "Makes some chaotic tracks in your board file",
            "show-button": true,
            "scopes": [
                "pcb"
            ],
            "entrypoint": "tracks.py",
            "args": [
                "--create-tracks"
            ],
            "icons-light": [
                "icons/add_tracks_24.png",
                "icons/add_tracks_48.png"
            ],
            "icons-dark": [
                "icons/add_tracks_dark_24.png",
                "icons/add_tracks_dark_48.png"
            ]
        },
        {
            "identifier": "delete-all-tracks",
            "name": "Delete All Tracks",
            "description": "You know what, those tracks were a mistake",
            "show-button": true,
            "scopes": [
                "pcb"
            ],
            "entrypoint": "tracks.py",
            "args": [
                "--delete-tracks"
            ],
            "icons-light": [
                "icons/delete_cursor_24.png",
                "icons/delete_cursor_48.png"
            ],
            "icons-dark": [
                "icons/delete_cursor_dark_24.png",
                "icons/delete_cursor_dark_48.png"
            ]
        }
